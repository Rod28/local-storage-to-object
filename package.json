{
  "name": "local-storage-to-object",
  "version": "1.1.5",
  "description": "It allows treating the data that is stored and extracted in the browser's localStorage, always as an object.",
  "author": {
    "name": "Rodrigo GS",
    "email": "r.garez28@gmail.com"
  },
  "license": "MIT",
  "browser": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://github.com/Rod28/local-storage-to-object",
  "repository": {
    "type": "git",
    "url": "https://github.com/Rod28/local-storage-to-object"
  },
  "bugs": {
    "url": "https://github.com/Rod28/local-storage-to-object/issues"
  },
  "keywords": [
    "local-torage-to-object",
    "local-torage-object",
    "local-torage",
    "localstorage",
    "storage",
    "window",
    "web",
    "react"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc",
    "lint:preCommit": "eslint --fix",
    "prettier:preCommit": "prettier --write .",
    "test:preCommit": "jest --bail",
    "test": "jest --coverage --watchAll"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint:pre-commit",
      "npm run prettier:pre-commit",
      "npm run test:pre-commit"
    ]
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "watchPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ]
  },
  "dependencies": {
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7"
  }
}
