{
  "name": "local-storage-to-object",
  "version": "1.3.0",
  "description": "It allows treating the data that is stored and extracted in the browser's localStorage, always as an object.",
  "author": {
    "name": "Rodrigo GS",
    "email": "r.garez28@gmail.com"
  },
  "license": "MIT",
  "source": "src/",
  "browser": "dist/index.js",
  "types": "dist/declarations/index.d.ts",
  "homepage": "https://github.com/Rod28/local-storage-to-object",
  "repository": {
    "type": "git",
    "url": "https://github.com/Rod28/local-storage-to-object"
  },
  "bugs": {
    "url": "https://github.com/Rod28/local-storage-to-object/issues"
  },
  "keywords": [
    "local storage",
    "local storage object",
    "localstorage",
    "storage",
    "window",
    "web",
    "react"
  ],
  "scripts": {
    "clean-up": "rm -rf dist",
    "remove-declarations": "rm -rf dist/declarations",
    "build:js": "tsc -p tsconfig.build.json && npm run remove-declarations",
    "build:dts": "tsc -p tsconfig.build_dts.json",
    "build": "npm run clean-up && npm run build:js && npm run build:dts",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --fix --ext .ts .",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test:pre-commit": "jest --bail",
    "test": "jest --coverage --watchAll --verbose"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7",
    "typescript": "4.7.4"
  }
