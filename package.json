{
  "name": "local-storage-to-object",
  "version": "1.0.0",
  "description": "It allows treating the data that is stored and extracted in the browser's localStorage, always as an object.",
  "author": {
    "name": "Rodrigo GS",
    "email": "r.garez28@gmail.com"
  },
  "license": "ISC",
  "browser": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "http://",
  "repository": {
    "type": "git",
    "url": "https://"
  },
  "bugs": {
    "url": "https://"
  },
  "keywords": [
    "localStorage",
    "web",
    "react",
    "storage"
  ],
  "scripts": {
    "build": "tsc",
    "lint:pre-commit": "eslint --fix",
    "prettier:pre-commit": "prettier --write .",
    "test": "jest --silent --coverage --watchAll",
    "test:pre-commit": "jest --bail"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint:pre-commit",
      "npm run prettier:pre-commit",
      "npm run test:pre-commit"
    ]
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "watchPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ]
  },
  "dependencies": {
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7"
  }
}
